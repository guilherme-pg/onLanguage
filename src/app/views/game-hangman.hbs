
<main id="main_and_footer">

    <div id="header_and_main">

        {{> header}}    

        <div id="main_hangman">

            <div class="hangman_activity">

                {{!-- HANGMAN image --}}
                <div class="hangman_display">
                    <h3>HANGMAN</h3>
                </div>


                <div class="letters_resource">

                    {{#each words}}

                        <div class="reference_word_container">
                            <P class="reference_word" id="reference_word_{{@index}}">{{referenceWord}}</P>
                        </div>

                        {{!-- word to discover --}}
                        <div class="partsofmain_hangman letters_discover" id="hangman_and_word_{{@index}}">
                            <div class="hidden_letters_container">
                                {{#each wordLetters}}

                                    <div class="letter_container" id="display_letters_{{@index}}">

                                        <p class="letter_space letter_group_{{@../index}}">{{letter}}</p>
                                    </div>

                                {{/each}}
                            </div>

                        </div>
                    {{/each}}

                        
                    

                    {{!-- letters KEYBOARD --}}
                    <div class="partsofmain_hangman letters_keyboard" id="buttons_space">

                    </div>


                    {{!-- resource BUTTONS --}}
                    <div class="buttons_container">
                        <input class="general_button button_resource" name="button_clue" id="button_clue" value="Clue">
                        <input class="general_button button_resource" name="button_next" id="button_next" value="Next">
                    </div>



                    <div>
                        {{!-- RESTART BUTTON --}}
                        <input type="submit" onClick="window.location.reload();" class="general_button" id="button_restart" value="Restart">
                    </div>
                </div>
            </div>


            
            
        </div>
    </div>

    {{> footer}}
</main>

<script src="/scripts/game-hangman.js"></script>
{{> scripts}}